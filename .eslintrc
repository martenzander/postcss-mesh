{
	parserOptions: {
		sourceType: "module",
		ecmaVersion: 7,
		ecmaFeatures: {
			jsx: false,
			spread: true,
			classes:true,
			experimentalObjectRestSpread : true
		}
	},
	parser: "babel-eslint",
	globals: {
		"require": false,
		"__dirname" : false,
		"module" : false,
		"Bugsnag" : true,
		"$" : true,
		"process" : true
	},
	"plugins": [
	],
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [],
	"rules": {
		// Possible Errors

		// DISABLED
		"no-console": 0,
		"no-extra-parens": 0,
		"no-process-env": 0,

		// WARNINGS
		"no-control-regex": 1,
		"no-unreachable": 1,
		"valid-jsdoc": 1,
		"no-empty": 1,
		"no-extra-semi": 1,
		"no-inner-declarations": [ 1, "functions" ],
		"no-extra-boolean-cast": 1,
		"no-debugger": 1,
		"comma-dangle": [
            "warn",
            "always-multiline"
        ],

		// ERRORS
		"no-cond-assign": [ 2, "always" ],
		"no-constant-condition": 2,
		"no-dupe-args": 2,
		"no-dupe-keys": 2,
		"no-duplicate-case": 2,
		"no-empty-character-class": 2,
		"no-ex-assign": 2,
		"no-func-assign": 2,
		"no-invalid-regexp": 2,
		"no-irregular-whitespace": 2,
		"no-negated-in-lhs": 2,
		"no-obj-calls": 2,
		"no-regex-spaces": 2,
		"no-sparse-arrays": 2,
		"no-unexpected-multiline": 2,
		"use-isnan": 2,
		"valid-typeof": 2,


		// Best Practices
		// DISABLED
		"curly": 0,
		"default-case": 0,
		"dot-location": 0,
		"guard-for-in": 0,
		"no-alert": 0,
		"no-eq-null": 0,
		"no-invalid-this": 0,
		"no-iterator": 0,
		"no-labels": 0,
		"no-magic-numbers": 0,
		"no-new-func": 0,
		"no-param-reassign": 0,
		"no-new-wrappers": 0,
		"no-script-url": 0,
		"vars-on-top": 0,
		"radix": 0,
		"complexity": [ 0, 4 ],
		"no-new": 0,
		"no-multi-spaces": [ 0, {
			"exceptions": {
				"VariableDeclarator": true
			}
		} ],

		// WARNINGS
		"dot-notation": [ 1, {
			"allowKeywords": true,
			"allowPattern": ""
		} ],
		"no-div-regex": 1,
		"no-else-return": 1,
		"no-extend-native": 1,
		"no-fallthrough": 1,
		"no-floating-decimal": 1,
		"no-lone-blocks": 1,
		"no-octal": 1,
		"no-octal-escape": 1,
		"no-useless-call": 1,
		"no-warning-comments": [ 1, {
			"terms": [ "todo", "fixme" ],
			"location": "anywhere"
		} ],
		"no-useless-concat": 1,
		"no-shadow": [ 1, {
			"hoist": "functions",
			"allow": [ "e", "event", "i", "j", "k", "$", "jQuery", "event" ]
		} ],

		// ERRORS
		"accessor-pairs": 2,
		"block-scoped-var": 2,
		"consistent-return": 2,
		"eqeqeq": [ 2, "allow-null" ],
		"no-caller": 2,
		"no-case-declarations": 2,
		"no-empty-pattern": 2,
		"no-eval": 2,
		"no-extra-bind": 2,
		"no-implicit-coercion": [ 2, {
			"boolean": true,
			"number": false,
			"string": true
		} ],
		"no-implied-eval": 2,
		"no-loop-func": 2,
		"no-multi-str": 2,
		"no-native-reassign": 2,
		"no-unused-expressions": [ 2, {
			"allowTernary": true,
			"allowShortCircuit": true
		} ],
		"no-throw-literal": 2,
		"no-sequences": 2,
		"no-self-compare": 2,
		"no-return-assign": 2,
		"no-redeclare": [ 2, {
			"builtinGlobals": true
		} ],
		"no-proto": 2,
		"yoda": 2,
		"wrap-iife": [ 2, "any" ],
		"no-with": 2,
		"no-void": 2,
		"no-shadow-restricted-names": 2,
		"jsx-quotes": 2,


		// Strict
		// DISABLED
		"strict": 0,

		// Variables
		// DISABLED
		"no-undefined": 0,
		"init-declarations": 0,

		// WARNINGS
		"no-unused-vars": [ 1, {
			"vars": "local",
			"args": "after-used",
			"argsIgnorePattern": "(^e$|^event$|^response$|^data$|^res$)"
		} ],
		"no-undef-init": 1,

		// ERRORS
		"no-use-before-define": [ 2, "nofunc" ],
		"no-label-var": 2,
		"no-delete-var": 2,
		"no-catch-shadow": 2,
		"no-undef": [ 2, {
			"typeof": false
		} ],


		// Node.js and CommonJS
		// DISABLED
		"callback-return": 0,
		"global-require": 0,
		"handle-callback-err": 0,
		"no-mixed-requires": 0,
		"no-new-require": 0,
		"no-path-concat": 0,
		"no-process-exit": 0,
		"no-restricted-modules": 0,
		"no-sync": 0,


		// Stylistic Issues
		// DISABELD
		"array-bracket-spacing": 0,
		"block-spacing": 0,
		"brace-style": 0,
		"camelcase": 0,
		"consistent-this": 0,
		"computed-property-spacing": 0,
		"comma-spacing": [ 0, {
			"before": false,
			"after": true
		} ],
		"eol-last": 0,
		"indent": 0,
		"id-match": 0,
		"id-length": 0,
		"func-style": 0,
		"max-statements": 0,
		"max-params": 0,
		"max-len": 0,
		"lines-around-comment": 0,
		"key-spacing": 0,
		"no-underscore-dangle": 0,
		"no-trailing-spaces": 0,
		"no-ternary": 0,
		"no-spaced-func": 0,
		"no-restricted-syntax": 0,
		"no-plusplus": 0,
		"no-new-object": 0,
		"no-array-constructor": 0,
		"no-negated-condition": 0,
		"no-multiple-empty-lines": 0,
		"no-mixed-spaces-and-tabs": 0,
		"no-inline-comments": 0,
		"no-continue": 0,
		"no-bitwise": 0,
		"newline-after-var": 0,
		"sort-vars": 0,
		"require-jsdoc": 0,
		"padded-blocks": 0,
		"one-var": 0,
		"object-curly-spacing": 0,
		"wrap-regex": 0,
		"spaced-comment": 0,
		"space-unary-ops": [ 0, {
			"words": true,
			"nonwords": false
		} ],
		"space-return-throw-case": 0,
		"space-infix-ops": 0,
		"space-in-parens": 0,
		"space-before-keywords": [ 0, "always" ],
		"space-before-function-paren": 0,
		"space-before-blocks": 0,
		"space-after-keywords": 0,
		"func-names": 0,
		"max-nested-callbacks": [ 0, 4 ],
		"semi-spacing": [ 0, {
			"before": false,
			"after": true
		} ],
		"max-depth": [ 0, 5 ],

		// WARNINGS
		"comma-style": [ 2, "last" ],
		"linebreak-style": 1,
		"new-cap": 1,
		"no-unneeded-ternary": 1,
		"no-nested-ternary": 1,
		"new-parens": 1,
		"semi": [ 1, "always" ],
		"quotes": [ 1, "single", "avoid-escape" ],
		"operator-linebreak": [ 1, "after", {
			"overrides": {
				"?": "after"
			}
		} ],
		"operator-assignment": [ 1, "always" ],
		"quote-props": [ 1, "as-needed" ],
		"no-lonely-if": 1,

		// ERRORS


		// ECMAScript 6

		// WARNINGS
		"prefer-template": 1,
		"prefer-spread": 1,
		"prefer-reflect": 0,
		"prefer-arrow-callback": 1,
		"object-shorthand": 1,
		"arrow-spacing": [1, { "before": true, "after": true }],
		"arrow-parens": [1, "as-needed"],
		"arrow-body-style": [1, "as-needed"],
		"prefer-const": 1,

		// ERRORS
		"require-yield": 2,
		"no-var": 2,
		"no-this-before-super": 2,
		"no-dupe-class-members": 2,
		"no-const-assign": 2,
		"no-class-assign": 2,
		"generator-star-spacing": [2, {"before": false, "after": true}],
		"constructor-super": 2,
	}
}